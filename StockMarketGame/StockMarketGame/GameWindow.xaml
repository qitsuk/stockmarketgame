        xmlns:local="clr-namespace:StockMarketGame"
        mc:Ignorable="d"
        Title="The Cub of Wall Street" Height="526" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid HorizontalAlignment="Left" Height="477" Margin="10,10,0,0" VerticalAlignment="Top" Width="774">
            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="142" Margin="10,36,0,0" VerticalAlignment="Top" Width="754">
